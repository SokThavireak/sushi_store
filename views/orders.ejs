<style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
</style>

<div id="toast-container" class="fixed top-24 right-4 z-[9999] flex flex-col gap-3 pointer-events-none"></div>

<div class="max-w-4xl mx-auto px-6 mt-32 mb-20">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">My Order History</h1>

    <% if (orders.length === 0) { %>
        <div class="bg-white p-12 rounded-xl text-center shadow-sm">
            <p class="text-gray-500">No orders found.</p>
            <a href="/menu" class="text-orange-600 font-bold hover:underline mt-2 block">Order something?</a>
        </div>
    <% } else { %>
        <div class="space-y-6">
            <% orders.forEach(order => { %>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 relative overflow-hidden">
                    
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-4">
                        <div>
                            <span class="font-mono text-sm text-gray-400">#<%= order.id %></span>
                            <h3 class="font-bold text-lg"><%= new Date(order.created_at).toLocaleDateString() %></h3>
                        </div>
                        
                        <div>
                            <% if(order.status === 'Cancel Requested' || order.status === 'Refund Requested') { %>
                                <span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-bold animate-pulse">
                                    <i class="fa-solid fa-clock-rotate-left mr-1"></i> Request Pending
                                </span>
                            <% } else if(order.status === 'Completed') { %>
                                <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-bold">Completed</span>
                            <% } else if(order.status === 'Cancelled' || order.status === 'Refunded') { %>
                                <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-xs font-bold"><%= order.status %></span>
                            <% } else { %>
                                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-bold"><%= order.status %></span>
                            <% } %>
                        </div>
                    </div>

                    <div class="flex justify-between items-end border-t pt-4">
                        <div>
                            <p class="text-xs text-gray-500 uppercase font-bold">Total</p>
                            <p class="text-xl font-bold text-gray-900"><%= Number(order.total_price).toFixed(2) %> ÷è</p>
                        </div>

                        <div class="flex gap-3">
                            <% if (order.status === 'Pending') { %>
                                <button onclick="requestAction(<%= order.id %>, 'cancel')" 
                                    class="px-4 py-2 bg-red-50 text-red-600 text-sm font-bold rounded-lg hover:bg-red-100 transition">
                                    Request Cancel
                                </button>
                            <% } %>

                            <% if (order.status === 'Completed') { %>
                                <button onclick="requestAction(<%= order.id %>, 'refund')" 
                                    class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-bold rounded-lg hover:bg-gray-200 transition">
                                    Request Refund
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<script>
    // 1. NOTIFICATION SYSTEM
    function showNotification(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const toast = document.createElement('div');
        const isError = type === 'error';
        const bgClass = isError ? 'bg-red-500' : 'bg-green-500';
        const icon = isError ? '<i class="fa-solid fa-circle-exclamation"></i>' : '<i class="fa-solid fa-circle-check"></i>';

        toast.className = `${bgClass} text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 transform pointer-events-auto min-w-[300px] border-2 border-white/20`;
        toast.style.animation = 'slideIn 0.5s forwards';
        
        toast.innerHTML = `
            <div class="text-2xl">${icon}</div>
            <div class="font-bold text-sm">${message}</div>
        `;

        container.appendChild(toast);

        setTimeout(() => {
            toast.style.animation = 'slideOut 0.5s forwards';
            setTimeout(() => toast.remove(), 500);
        }, 3000);
    }

    // 2. GENERIC REQUEST HANDLER
    async function requestAction(orderId, type) {
        const confirmMsg = type === 'cancel' 
            ? "Are you sure you want to cancel this order?" 
            : "Are you sure you want to request a refund?";
            
        if (!confirm(confirmMsg)) return;

        const endpoint = type === 'cancel' 
            ? `/orders/request-cancel/${orderId}` 
            : `/orders/request-refund/${orderId}`;

        try {
            const res = await fetch(endpoint, { method: 'POST' });
            
            if (res.ok) {
                const successMsg = type === 'cancel' 
                    ? "Cancel Request Sent Successfully!" 
                    : "Refund Request Sent Successfully!";
                showNotification(successMsg, 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showNotification("Error submitting request", 'error');
            }
        } catch (err) {
            console.error(err);
            showNotification("Server Connection Error", 'error');
        }
    }
</script>