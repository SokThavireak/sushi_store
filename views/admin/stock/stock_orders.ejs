                    <button onclick="filterCategory('Cook')" class="cat-btn bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 px-4 py-1.5 rounded-full text-xs font-bold whitespace-nowrap transition">Cook</button>
                    <button onclick="filterCategory('Drink')" class="cat-btn bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 px-4 py-1.5 rounded-full text-xs font-bold whitespace-nowrap transition">Drink</button>
                 
                    <button onclick="filterCategory('Supplies')" class="cat-btn bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 px-4 py-1.5 rounded-full text-xs font-bold whitespace-nowrap transition">Supplies</button>
                    <button onclick="filterCategory('Packaging')" class="cat-btn bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 px-4 py-1.5 rounded-full text-xs font-bold whitespace-nowrap transition">Packaging</button>
