<div class="space-y-6">

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-xl p-6 border border-gray-100 shadow-sm flex items-center justify-between">
      <div>
        <p class="text-xs font-bold text-gray-400 uppercase">Pending Requests</p>
        <h3 class="text-2xl font-bold text-gray-800">
            <%= requests.filter(r => r.status === 'Pending').length %>
        </h3>
      </div>
      <div class="w-12 h-12 rounded-full bg-yellow-50 text-yellow-600 flex items-center justify-center text-xl">
        <i class="fa-solid fa-clock"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-100 shadow-sm flex items-center justify-between">
      <div>
        <p class="text-xs font-bold text-gray-400 uppercase">Completed/Received</p>
        <h3 class="text-2xl font-bold text-gray-800">
            <%= requests.filter(r => r.status === 'Completed' || r.status === 'Confirmed').length %>
        </h3>
      </div>
      <div class="w-12 h-12 rounded-full bg-green-50 text-green-600 flex items-center justify-center text-xl">
        <i class="fa-solid fa-check"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-100 shadow-sm flex items-center justify-between">
      <div>
        <p class="text-xs font-bold text-gray-400 uppercase">Total Orders</p>
        <h3 class="text-2xl font-bold text-gray-800"><%= requests.length %></h3>
      </div>
      <div class="w-12 h-12 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center text-xl">
        <i class="fa-solid fa-clipboard-list"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    
    <div class="p-6 border-b border-gray-100 flex justify-between items-center bg-gray-50/50">
      <div>
        <h3 class="font-bold text-gray-800 text-lg">My Order History</h3>
        <p class="text-xs text-gray-500">Track your stock replenishment requests</p>
      </div>
      
      <a href="/admin/stock/create" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-xl text-sm font-bold shadow-sm transition flex items-center gap-2 transform active:scale-95">
        <i class="fa-solid fa-plus"></i> New Stock Request
      </a>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse">
        <thead class="bg-gray-50 text-gray-500 text-xs uppercase font-bold tracking-wider border-b border-gray-100">
          <tr>
            <th class="p-5">Order ID</th>
            <th class="p-5">Date Requested</th>
            <th class="p-5">Summary</th>
            <th class="p-5">Status</th>
            <th class="p-5 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% if(requests.length > 0) { %>
             <% requests.forEach(r => { %>
                <tr class="hover:bg-gray-50/80 transition duration-150 group">
                  
                  <td class="p-5">
                    <span class="font-mono text-xs font-bold text-indigo-600 bg-indigo-50 px-2 py-1 rounded">
                        #<%= r.id %>
                    </span>
                  </td>

                  <td class="p-5">
                      <div class="flex flex-col">
                          <span class="text-sm font-bold text-gray-700">
                              <%= new Date(r.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                          </span>
                          <span class="text-xs text-gray-400">
                              <%= new Date(r.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                          </span>
                      </div>
                  </td>

                  <td class="p-5 text-sm text-gray-600">
                      <span class="flex items-center gap-2">
                        <i class="fa-solid fa-box-open text-gray-400"></i>
                        <%= r.items ? r.items.length : 'Multiple' %> Items
                      </span>
                  </td>

                  <td class="p-5">
                    <% if(r.status === 'Pending') { %>
                        <span class="inline-flex items-center gap-1.5 bg-yellow-100 text-yellow-700 px-2.5 py-1 rounded-full text-xs font-bold border border-yellow-200">
                            <span class="w-1.5 h-1.5 rounded-full bg-yellow-500 animate-pulse"></span> Pending
                        </span>
                    <% } else if(r.status === 'Confirmed' || r.status === 'Approved') { %>
                        <span class="inline-flex items-center gap-1.5 bg-blue-100 text-blue-700 px-2.5 py-1 rounded-full text-xs font-bold border border-blue-200">
                            <i class="fa-solid fa-truck-fast text-[10px]"></i> On The Way
                        </span>
                    <% } else if(r.status === 'Completed') { %>
                         <span class="inline-flex items-center gap-1.5 bg-green-100 text-green-700 px-2.5 py-1 rounded-full text-xs font-bold border border-green-200">
                            <i class="fa-solid fa-check text-[10px]"></i> Received
                        </span>
                    <% } else { %>
                        <span class="inline-flex items-center gap-1.5 bg-red-100 text-red-700 px-2.5 py-1 rounded-full text-xs font-bold border border-red-200">
                            <i class="fa-solid fa-ban text-[10px]"></i> Rejected
                        </span>
                    <% } %>
                  </td>
                 
                  <td class="p-5 text-right">
                    <div class="flex justify-end gap-2">
                        <a href="/admin/stock/request/<%= r.id %>" class="w-8 h-8 rounded-full bg-gray-100 text-gray-500 hover:bg-indigo-100 hover:text-indigo-600 flex items-center justify-center transition" title="View Details">
                            <i class="fa-solid fa-eye text-xs"></i>
                        </a>

                        <% if (r.status === 'Pending') { %>
                            <button 
                                onclick="cancelRequest(<%= r.id %>)" 
                                class="w-8 h-8 rounded-full bg-red-50 text-red-500 hover:bg-red-100 hover:text-red-600 flex items-center justify-center transition" 
                                title="Cancel Request">
                                <i class="fa-solid fa-trash text-xs"></i>
                            </button>
                        <% } %>
                    </div>
                  </td>
                </tr>
             <% }) %>
          <% } else { %>
              <tr>
                  <td colspan="5" class="p-12 text-center">
                      <div class="flex flex-col items-center justify-center text-gray-400">
                          <div class="bg-gray-50 p-4 rounded-full mb-3">
                            <i class="fa-solid fa-clipboard text-3xl text-gray-300"></i>
                          </div>
                          <p class="font-bold text-gray-600">No orders found</p>
                          <p class="text-sm text-gray-400 mb-4">You haven't made any stock requests yet.</p>
                          <a href="/admin/stock/create" class="text-indigo-600 font-bold hover:underline text-sm">Create First Request</a>
                      </div>
                  </td>
              </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
    async function cancelRequest(id) {
        if(!confirm("Are you sure you want to cancel this pending request?")) return;

        try {
            // Adjust the URL to match your backend route for deleting/cancelling
            const res = await fetch(`/admin/stock/delete/${id}`, { 
                method: 'POST' 
            });
            
            if(res.ok) {
                window.location.reload();
            } else {
                alert("Error cancelling request. It might already be processed.");
            }
        } catch(err) {
            console.error(err);
            alert("Server error");
        }
    }
</script>