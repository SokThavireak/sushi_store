            <div id="cartItemsList" class="flex-1 overflow-y-auto p-4 space-y-3 custom-scroll hidden bg-white dark:bg-gray-800">
           </div>

            <div class="p-5 border-t border-gray-100 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
                <div class="flex justify-between items-center mb-4 text-sm font-bold text-gray-600 dark:text-gray-300">
                    <span>Total Items:</span>
                    <span id="totalItems" class="text-indigo-600 dark:text-indigo-400">0</span>
    
                 </div>
                <button onclick="submitRequest()" id="submitBtn" disabled class="w-full py-3 bg-gray-300 dark:bg-gray-700 text-white rounded-xl font-bold transition flex items-center justify-center gap-2 cursor-not-allowed">
                    <span>Submit Request</span>
                    <i class="fa-solid fa-paper-plane"></i>
             
                </button>
            </div>
        </div>

    </div>

<% } %>

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden mb-10 mt-6 transition-colors">
    <div class="p-6 border-b border-gray-100 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50 flex justify-between items-center">
        <div>
            <h2 class="text-lg font-bold text-gray-800 dark:text-white">Request History</h2>
            <p class="text-xs text-gray-500 dark:text-gray-400">Track and manage stock requests</p>
   
        </div>
        <button onclick="window.location.reload()" class="text-indigo-600 dark:text-indigo-400 text-sm font-bold hover:underline">
            <i class="fa-solid fa-rotate-right"></i> Refresh
        </button>
    </div>
    
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-gray-50 dark:bg-gray-700 text-gray-500 dark:text-gray-400 uppercase text-xs font-bold">
               
                <tr>
                    <th class="px-6 py-4">ID</th>
                    <th class="px-6 py-4">Date</th>
                    <th class="px-6 py-4">Location</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                <% if (typeof requests !== 'undefined' && requests.length > 0) { %>
                  
                   <% requests.forEach(req => { %>
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition">
                            <td class="px-6 py-4 font-mono text-gray-500">#<%= req.id %></td>
                            <td class="px-6 py-4 font-bold text-gray-700 dark:text-white">
                                <%= new Date(req.created_at).toLocaleDateString() %> 
                                <span class="text-xs text-gray-400 font-normal ml-1"><%= new Date(req.created_at).toLocaleTimeString() %></span>
                            </td>
                            
                            <td class="px-6 py-4 font-medium text-gray-600 dark:text-gray-300">
                                <%= req.location_name || 'N/A' %>
                            </td>

                            <td class="px-6 py-4">
                                <% if (req.status === 'Pending') { %>
                             
                                    <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1">
                                        <i class="fa-regular fa-clock"></i> Pending
                                    </span>
   
                                <% } else if (req.status === 'Confirmed') { %>
                                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1">
                
                                         <i class="fa-solid fa-check"></i> Approved
                                    </span>
                                <% } else if (req.status === 'Cancel Requested') { %>
                                    <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1 animate-pulse">
                                        <i class="fa-solid fa-ban"></i> Cancel Requested
    
                                    </span>
                                <% } else if (req.status === 'Refund Requested') { %>
                           
                                     <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1 animate-pulse">
                                        <i class="fa-solid fa-rotate-left"></i> Refund Requested
                                   
                                    </span>
                                <% } else if (req.status === 'Cancelled') { %>
                                    <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1">
            
                                         <i class="fa-solid fa-ban"></i> Cancelled
                                    </span>
                                <% } else if (req.status === 'Refunded') { %>
                                    <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1">
                                        <i class="fa-solid fa-rotate-left"></i> Refunded
   
                                    </span>
                                <% } else { %>
                               
                                    <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-bold flex items-center w-fit gap-1">
                                        <i class="fa-solid fa-xmark"></i> Rejected
                                    </span>
     
                                <% } %>
                            </td>
                            <td class="px-6 py-4 text-right flex items-center justify-end gap-2">
        
                                <% if (user.role === 'store_manager') { %>
                                    <% if (req.status === 'Pending') { %>
                                        <button onclick="updateRequestStatus(<%= req.id %>, 'Cancel Requested')" 
                                            class="bg-red-50 text-red-600 border border-red-200 hover:bg-red-100 px-3 py-1.5 rounded-lg text-xs font-bold transition">
                                            Request Cancel
                                        </button>
           
                                     <% } else if (req.status === 'Confirmed') { %>
                                        <button onclick="updateRequestStatus(<%= req.id %>, 'Refund Requested')" 
                                            class="bg-blue-50 text-blue-600 border border-blue-200 hover:bg-blue-100 px-3 py-1.5 rounded-lg text-xs font-bold transition">
                                            Request Refund
                                        </button>
                                    <% } %>
                                <% } %>

                                <% if (user.role === 'admin' || user.role === 'manager') { %>
                                    
                                    <% if (req.status === 'Pending') { %>
                                        <button onclick="updateRequestStatus(<%= req.id %>, 'Confirmed')" 
                                            class="bg-green-600 text-white hover:bg-green-700 px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">
                                            Approve
                                        </button>
                                    <% } %>

                                    <% if (req.status === 'Cancel Requested') { %>
                                        <button onclick="updateRequestStatus(<%= req.id %>, 'Cancelled')" 
                                            class="bg-red-600 text-white hover:bg-red-700 px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">
                                            Accept Cancel
                                        </button>
                                    <% } else if (req.status === 'Refund Requested') { %>
                                        <button onclick="updateRequestStatus(<%= req.id %>, 'Refunded')" 
                                            class="bg-blue-600 text-white hover:bg-blue-700 px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">
                                            Accept Refund
                                        </button>
                                    <% } %>

                                    <% if (req.status === 'Pending' || req.status === 'Confirmed') { %>
                                         <button onclick="updateRequestStatus(<%= req.id %>, 'Cancelled')" 
                                            class="bg-white border border-red-200 text-red-500 hover:bg-red-50 px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">
                                            Cancel
                                        </button>
                                    <% } %>

                                <% } %>

                                <a href="/admin/stock/request/<%= req.id %>" class="text-gray-400 hover:text-indigo-600 dark:hover:text-indigo-400 transition p-2">
                                    <i class="fa-solid fa-eye text-lg"></i>
                                </a>
                            
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                         <td colspan="5" class="px-6 py-10 text-center text-gray-400 dark:text-gray-500">
                            No requests found.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<button id="theme-toggle" class="fixed bottom-6 right-6 w-12 h-12 bg-gray-900 dark:bg-yellow-400 text-white dark:text-gray-900 rounded-full shadow-lg z-[9999] flex items-center justify-center transition-transform hover:scale-110 focus:outline-none">
    <i class="fa-solid fa-moon dark:hidden text-lg"></i>
    <i class="fa-solid fa-sun hidden dark:block text-lg"></i>
</button>

<script>
    // --- DARK MODE LOGIC ---
    const themeBtn = document.getElementById('theme-toggle');
    themeBtn.addEventListener('click', () => {
        document.documentElement.classList.toggle('dark');
        const isDark = document.documentElement.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });

    // State
    let cart = [];
    
    // --- SWEETALERT NOTIFICATION MIXIN ---
    const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.addEventListener('mouseenter', Swal.stopTimer)
            toast.addEventListener('mouseleave', Swal.resumeTimer)
        }
    });

    function showNotification(message, type = 'success') {
        Toast.fire({
            icon: type,
            title: message
        });
    }

    // --- ADD TO CART FUNCTION ---
    function addToCart(item) {
        const inputId = `qty-${item.id}`;
        const input = document.getElementById(inputId);
        const qty = parseInt(input.value);

        if (!qty || qty <= 0) {
            return showNotification("Please enter a valid quantity", "error");
        }

        const existing = cart.find(c => c.id === item.id);
        if (existing) {
            existing.quantity += qty;
        } else {
            cart.push({ ...item, quantity: qty });
        }

        input.value = '';
        renderCart();
        showNotification("Added to Cart!", "success");
    }

    // --- RENDER CART UI ---
    function renderCart() {
        const list = document.getElementById('cartItemsList');
        const empty = document.getElementById('emptyCart');
        const countBadge = document.getElementById('cartCount');
        const totalText = document.getElementById('totalItems');
        const btn = document.getElementById('submitBtn');
        if (cart.length === 0) {
            list.classList.add('hidden');
            empty.classList.remove('hidden');
            btn.disabled = true;
            btn.classList.add('bg-gray-300', 'dark:bg-gray-700', 'cursor-not-allowed');
            btn.classList.remove('bg-indigo-600', 'hover:bg-indigo-700', 'shadow-lg');
        } else {
            list.classList.remove('hidden');
            empty.classList.add('hidden');
            btn.disabled = false;
            btn.classList.remove('bg-gray-300', 'dark:bg-gray-700', 'cursor-not-allowed');
            btn.classList.add('bg-indigo-600', 'hover:bg-indigo-700', 'shadow-lg');
        }

        countBadge.innerText = cart.length;
        totalText.innerText = cart.length;
        list.innerHTML = cart.map((item, index) => `
            <div class="bg-white dark:bg-gray-700 p-3 rounded-lg border border-gray-200 dark:border-gray-600 shadow-sm flex items-center justify-between cart-item-anim transition-colors">
                <div class="flex items-center gap-3">
                    <img src="${item.image_url || 'https://via.placeholder.com/50'}" class="w-10 h-10 rounded-md object-cover bg-gray-100 dark:bg-gray-600">
                    <div>
                        <h4 class="text-xs font-bold text-gray-800 dark:text-white">${item.name}</h4>
                        <p class="text-[10px] text-gray-500 dark:text-gray-400">${item.category}</p>
                    </div>
                </div>
           
                <div class="flex items-center gap-3">
                    <span class="text-sm font-bold text-indigo-600 dark:text-indigo-400">${item.quantity} ${item.unit}</span>
                    <button onclick="removeFromCart(${index})" class="text-gray-400 hover:text-red-500 dark:hover:text-red-400 transition">
                        <i class="fa-solid fa-trash text-xs"></i>
                    </button>
                </div>
            </div>
        `).join('');
    }

    function removeFromCart(index) {
        cart.splice(index, 1);
        renderCart();
    }

    // --- SUBMIT REQUEST ---
    async function submitRequest() {
        const locName = document.getElementById('location_name')?.value;
        if (!locName) return showNotification("Please select a location first", "error");
        if (cart.length === 0) return showNotification("Cart is empty", "error");
        const btn = document.getElementById('submitBtn');
        const originalText = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Sending...';
        try {
            const res = await fetch('/api/stock/create', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ 
                    location_name: locName, 
                    items: cart.map(i => ({ 
                        name: i.name, 
                        category: i.category, 
                        quantity: i.quantity 
                    })) 
                })
            });
            if (res.ok) {
                // SUCCESS ALERT
                Swal.fire({
                    title: 'Success!',
                    text: 'Request Sent Successfully!',
                    icon: 'success',
                    timer: 1500,
                    showConfirmButton: false
                });
                cart = [];
                renderCart();
                setTimeout(() => window.location.reload(), 1500);
            } else {
                const data = await res.json();
                showNotification(data.error || "Failed to send", "error");
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        } catch (err) {
            showNotification("Server Error", "error");
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

    // --- UPDATE REQUEST STATUS (Styled Confirmation) ---
    async function updateRequestStatus(id, newStatus) {
        let title = "Are you sure?";
        let text = "Do you want to proceed with this action?";
        let confirmBtnColor = '#3085d6';

        if (newStatus.includes('Cancel')) {
            text = "You are about to cancel this request.";
            confirmBtnColor = '#d33';
        }
        if (newStatus === 'Confirmed') {
            title = "Approve Request?";
            text = "This will mark the request as approved.";
            confirmBtnColor = '#10b981'; // Green
        }
        if (newStatus.includes('Refund')) {
            title = "Process Refund?";
            confirmBtnColor = '#3b82f6'; // Blue
        }

        // --- SWEETALERT CONFIRM DIALOG ---
        const result = await Swal.fire({
            title: title,
            text: text,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: confirmBtnColor,
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, do it!'
        });

        if (result.isConfirmed) {
            try {
                const res = await fetch(`/api/stock/update-status/${id}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status: newStatus })
                });
                if (res.ok) {
                    Swal.fire(
                        'Updated!',
                        'The status has been updated.',
                        'success'
                    );
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    const data = await res.json();
                    showNotification(data.error || "Error updating status", "error");
                }
            } catch (err) {
                console.error(err);
                showNotification("Server Error", "error");
            }
        }
    }

    // --- FILTERS ---
    function filterProducts() {
        const term = document.getElementById('searchInput').value.toLowerCase();
        document.querySelectorAll('.product-card').forEach(card => {
            const name = card.getAttribute('data-name');
            if (name.includes(term)) card.style.display = 'block';
            else card.style.display = 'none';
        });
    }

    function filterCategory(cat) {
        document.querySelectorAll('.cat-btn').forEach(b => {
            if(b.innerText === cat) {
                b.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-300');
                b.classList.add('bg-indigo-600', 'text-white');
            } else {
                b.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-300');
                b.classList.remove('bg-indigo-600', 'text-white');
            }
        });
        document.querySelectorAll('.product-card').forEach(card => {
            const category = card.getAttribute('data-category');
            if (cat === 'All' || category === cat) card.style.display = 'block';
            else card.style.display = 'none';
        });
    }
</script>