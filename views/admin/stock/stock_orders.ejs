                <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-4" id="inventoryGrid">
                    <% if (typeof stocks !== 'undefined' && stocks.length > 0) { %>
                        <% stocks.forEach(item => { %>
                   
                            <div class="product-card bg-white dark:bg-gray-800 p-3 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition group relative"
