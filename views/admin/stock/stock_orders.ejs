                                    <div class="absolute top-2 right-2 bg-white/90 dark:bg-gray-900/90 backdrop-blur px-2 py-0.5 rounded text-[10px] font-bold text-gray-500 dark:text-gray-300 shadow-sm">
                                        <%= item.category %>
                                    </div>
