<style>
    /* Toast Animation Keyframes */
    @keyframes slideIn {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    @keyframes slideOut {
        from { transform: translateX(0); opacity: 1; }
        to { transform: translateX(100%); opacity: 0; }
    }
    .animate-fade-in { animation: fadeIn 0.3s ease-out; transition: all 0.2s; }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(5px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div id="toast-container" class="fixed top-24 right-4 z-[9999] flex flex-col gap-3 pointer-events-none"></div>

<div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden my-10 transition-colors">

    <div class="p-6 flex justify-between items-center border-b border-gray-100 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
        <div>
            <h3 class="font-bold text-gray-800 dark:text-white text-lg">Create Stock Request</h3>
            <p class="text-xs text-gray-500 dark:text-gray-400">Select items from the master menu to restock</p>
        </div>
        <a href="/admin/stock" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition">
            <i class="fa-solid fa-xmark text-xl"></i>
        </a>
    </div>

    <div class="p-8">
        <form id="stockForm" class="space-y-6">

            <div>
                <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 uppercase mb-1">Requesting For Location</label>

                <% if (user.role==='store_manager' ) { %>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-store text-gray-400"></i>
                        </div>
                        <input type="text" value="My Assigned Store" disabled
                            class="pl-10 w-full bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg p-3 text-gray-600 dark:text-gray-300 font-bold">
                        <input type="hidden" id="location_name" value="">
                    </div>
                <% } else { %>
                    <div class="relative">
                        <select id="location_name"
                            class="w-full bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg p-3 text-gray-800 dark:text-white font-bold focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                            <% if (typeof locations !=='undefined' && locations && locations.length> 0) { %>
                                <% locations.forEach(loc=> { %>
                                    <option value="<%= loc.name %>"><%= loc.name %></option>
                                <% }) %>
                            <% } else { %>
                                <option value="" disabled selected>No locations available (DB Offline)</option>
                            <% } %>
                        </select>
                    </div>
                <% } %>
            </div>

            <div class="border-t border-b border-gray-100 dark:border-gray-700 py-6">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="font-bold text-gray-700 dark:text-gray-200 flex items-center gap-2">
                        <i class="fa-solid fa-list-check text-indigo-500"></i> Items Needed
                    </h3>
                    <button type="button" onclick="addItemRow()"
                        class="bg-indigo-50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400 px-4 py-2 rounded-lg text-xs font-bold hover:bg-indigo-100 dark:hover:bg-indigo-900/50 transition flex items-center gap-2 shadow-sm">
                        <i class="fa-solid fa-plus"></i> Add Another Line
                    </button>
                </div>

                <div class="grid grid-cols-12 gap-3 mb-2 px-1">
                    <div class="col-span-3 text-[10px] font-bold text-gray-400 dark:text-gray-500 uppercase">Category</div>
                    <div class="col-span-5 text-[10px] font-bold text-gray-400 dark:text-gray-500 uppercase">Item Name</div>
                    <div class="col-span-3 text-[10px] font-bold text-gray-400 dark:text-gray-500 uppercase">Quantity</div>
                    <div class="col-span-1"></div>
                </div>

                <div id="items-container" class="space-y-3"></div>
            </div>

            <div class="flex justify-end">
                <button type="button" onclick="submitStock()"
                    class="w-full md:w-auto px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl font-bold shadow-lg shadow-indigo-200 dark:shadow-none transition flex items-center justify-center gap-2">
                    <span>Submit Request</span>
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<button id="theme-toggle" class="fixed bottom-6 right-6 w-12 h-12 bg-gray-900 dark:bg-yellow-400 text-white dark:text-gray-900 rounded-full shadow-lg z-[9999] flex items-center justify-center transition-transform hover:scale-110 focus:outline-none">
    <i class="fa-solid fa-moon dark:hidden text-lg"></i>
    <i class="fa-solid fa-sun hidden dark:block text-lg"></i>
</button>

<script>
    // --- DARK MODE LOGIC ---
    const themeBtn = document.getElementById('theme-toggle');
    themeBtn.addEventListener('click', () => {
        document.documentElement.classList.toggle('dark');
        const isDark = document.documentElement.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });

    // INJECT DATA
    const masterInventory = <%- JSON.stringify(stocks || []) %>;

    // NOTIFICATION SYSTEM
    function showNotification(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const toast = document.createElement('div');
        const isError = type === 'error';
        const bgClass = isError ? 'bg-red-500' : 'bg-green-500';
        const icon = isError ? '<i class="fa-solid fa-circle-exclamation"></i>' : '<i class="fa-solid fa-circle-check"></i>';
        toast.className = `${bgClass} text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 transform pointer-events-auto min-w-[300px] border-2 border-white/20`;
        toast.style.animation = 'slideIn 0.5s forwards';
        toast.innerHTML = `<div class="text-2xl">${icon}</div><div class="font-bold text-sm">${message}</div>`;
        container.appendChild(toast);
        setTimeout(() => { toast.style.animation = 'slideOut 0.5s forwards'; setTimeout(() => toast.remove(), 500); }, 3000);
    }

    document.addEventListener('DOMContentLoaded', addItemRow);
    
    function addItemRow() {
        const container = document.getElementById('items-container');
        const div = document.createElement('div');
        // Added dark mode classes for dynamic rows
        div.className = "grid grid-cols-12 gap-3 items-center item-row bg-gray-50 dark:bg-gray-700 p-2 rounded-lg border border-gray-100 dark:border-gray-600 animate-fade-in transition-colors";
        div.innerHTML = `
            <div class="col-span-3">
                <select onchange="filterItems(this)" class="category-select w-full bg-white dark:bg-gray-600 border border-gray-200 dark:border-gray-500 rounded-lg p-2.5 text-sm font-medium text-gray-600 dark:text-gray-200 focus:border-indigo-500 focus:outline-none">
                    <option value="" disabled selected>Select...</option>
                    <option value="Cook">Cook</option>
                    <option value="Drink">Drink</option>
                    <option value="Supplies">Supplies</option>
                    <option value="Packaging">Packaging</option>
                </select>
            </div>
            <div class="col-span-5 relative">
                <select onchange="updateUnit(this)" disabled class="item-select w-full bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-500 rounded-lg p-2.5 text-sm font-bold text-gray-800 dark:text-gray-300 focus:border-indigo-500 focus:outline-none opacity-60 cursor-not-allowed">
                    <option value="">-- Choose Category First --</option>
                </select>
            </div>
            <div class="col-span-3 relative">
                <input type="number" min="1" placeholder="0" class="qty-input w-full bg-white dark:bg-gray-600 border border-gray-200 dark:border-gray-500 rounded-lg p-2.5 text-sm font-bold text-gray-800 dark:text-white focus:border-indigo-500 focus:outline-none pl-3 pr-12">
                <span class="unit-badge absolute right-3 top-2.5 text-xs font-bold text-gray-400 dark:text-gray-300 bg-gray-100 dark:bg-gray-500 px-1 rounded">UNIT</span>
            </div>
            <div class="col-span-1 flex justify-center">
                <button type="button" onclick="removeRow(this)" class="w-8 h-8 rounded-full bg-white dark:bg-gray-600 border border-gray-200 dark:border-gray-500 text-gray-400 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/50 hover:border-red-100 hover:text-red-500 transition flex items-center justify-center shadow-sm">
                    <i class="fa-solid fa-trash text-xs"></i>
                </button>
            </div>
        `;
        container.appendChild(div);
    }

    function filterItems(categorySelect) {
        const row = categorySelect.closest('.item-row');
        const itemSelect = row.querySelector('.item-select');
        const selectedCat = categorySelect.value;
        itemSelect.innerHTML = '<option value="" disabled selected>Select Item...</option>';
        const filteredItems = masterInventory.filter(item => item.category === selectedCat);
        if (filteredItems.length > 0) {
            itemSelect.disabled = false;
            // Handle dark mode classes removal
            itemSelect.classList.remove('bg-gray-100', 'dark:bg-gray-800', 'opacity-60', 'cursor-not-allowed');
            itemSelect.classList.add('bg-white', 'dark:bg-gray-600');
            filteredItems.forEach(item => {
                const option = document.createElement('option');
                option.value = item.name;
                option.text = item.name;
                option.setAttribute('data-unit', item.unit || 'pcs');
                itemSelect.appendChild(option);
            });
        } else {
            itemSelect.innerHTML = '<option value="">No items found</option>';
            itemSelect.disabled = true;
        }
    }

    function updateUnit(itemSelect) {
        const row = itemSelect.closest('.item-row');
        const unitBadge = row.querySelector('.unit-badge');
        const selectedOption = itemSelect.options[itemSelect.selectedIndex];
        const unit = selectedOption.getAttribute('data-unit');
        if (unit) {
            unitBadge.innerText = unit.toUpperCase();
            unitBadge.classList.remove('text-gray-400', 'dark:text-gray-300');
            unitBadge.classList.add('text-indigo-500', 'dark:text-indigo-400');
        }
    }

    function removeRow(btn) {
        const row = btn.closest('.item-row');
        row.style.opacity = '0';
        row.style.transform = 'translateY(-10px)';
        setTimeout(() => row.remove(), 200);
    }

    async function submitStock() {
        const locName = document.getElementById('location_name')?.value;
        const rows = document.querySelectorAll('.item-row');
        const items = [];

        rows.forEach(row => {
            const catSelect = row.querySelector('.category-select');
            const itemSelect = row.querySelector('.item-select');
            const qtyInput = row.querySelector('.qty-input');
            if (catSelect.value && itemSelect.value && qtyInput.value > 0) {
                items.push({
                    category: catSelect.value,
                    name: itemSelect.value,
                    quantity: qtyInput.value
                });
            }
        });
        if (items.length === 0) return showNotification("Please add at least one item.", "error");
        try {
            const btn = document.querySelector('button[onclick="submitStock()"]');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Sending...';
            const res = await fetch('/api/stock/create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ location_name: locName, items: items })
            });
            if (res.ok) {
                showNotification("Request Created Successfully!", "success");
                setTimeout(() => window.location.href = '/admin/stock', 1500);
            } else {
                const err = await res.json();
                showNotification(err.error || "Error creating request", "error");
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        } catch (err) {
            console.error(err);
            showNotification("Server connection error", "error");
        }
    }
</script>