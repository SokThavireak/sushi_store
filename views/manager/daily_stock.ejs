<style>
    /* Toast Animation Keyframes */
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    .animate-fade-up { animation: fadeInUp 0.5s ease-out forwards; }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
</style>

<div id="toast-container" class="fixed top-24 right-4 z-[9999] flex flex-col gap-3 pointer-events-none"></div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 my-10">
  
  <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 mb-8">
    <div class="flex flex-col md:flex-row md:justify-between md:items-end gap-6">
        
        <div class="flex-1">
            <h3 class="font-bold text-gray-800 text-2xl mb-1">Daily Stock Count</h3>
            <p class="text-sm text-gray-500">Log physical inventory for <span class="font-bold text-indigo-600"><%= typeof query !== 'undefined' && query.date ? new Date(query.date).toLocaleDateString() : new Date().toLocaleDateString() %></span></p>
        </div>

        <form method="GET" action="/manager/daily-stock" class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
            
            <div class="flex-1">
                <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">Date</label>
                <input 
                    type="date" 
                    name="date"
                    id="date-input" 
                    value="<%= typeof query !== 'undefined' && query.date ? query.date : new Date().toISOString().split('T')[0] %>"
                    onchange="this.form.submit()"
                    class="w-full bg-gray-50 border border-gray-200 text-gray-700 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block px-3 py-2 shadow-sm"
                >
            </div>

            <div class="flex-1">
                <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">Location</label>
                <% if (typeof user !== 'undefined' && (user.role === 'admin' || user.role === 'manager')) { %>
                    <select 
                        name="location" 
                        id="location-select"
                        onchange="this.form.submit()"
                        class="w-full bg-gray-50 border border-gray-200 text-gray-700 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block px-3 py-2 shadow-sm min-w-[160px]"
                    >
                        <% if (typeof locations !== 'undefined' && locations.length > 0) { %>
                            <% locations.forEach(loc => { %>
                                <option value="<%= loc.id %>" <%= (typeof currentLocationId !== 'undefined' && currentLocationId == loc.id) ? 'selected' : '' %>>
                                    <%= loc.name %>
                                </option>
                            <% }) %>
                        <% } else { %>
                            <option value="<%= typeof currentLocationId !== 'undefined' ? currentLocationId : '' %>" selected>
                                <%= locationName %>
                            </option>
                        <% } %>
                    </select>
                <% } else { %>
                    <div class="bg-gray-100 border border-gray-200 text-gray-600 text-sm rounded-lg px-3 py-2 shadow-sm min-w-[160px] flex justify-between items-center cursor-not-allowed">
                        <span class="font-bold"><%= locationName %></span>
                        <i class="fa-solid fa-lock text-xs text-gray-400"></i>
                    </div>
                    <input type="hidden" id="location-select" name="location" value="<%= typeof currentLocationId !== 'undefined' ? currentLocationId : '' %>">
                <% } %>
            </div>
        </form>
    </div>

    <div class="mt-8 flex flex-col items-center gap-6">
        <div class="relative w-full max-w-2xl">
            <input 
                type="text" 
                id="stock-search" 
                onkeyup="filterStockItems()" 
                placeholder="Search ingredients..." 
                class="w-full pl-12 pr-4 py-3 rounded-full border border-gray-200 bg-gray-50 shadow-sm text-gray-700 focus:ring-2 focus:ring-indigo-500 focus:bg-white focus:outline-none transition-all" 
            />
            <div class="absolute left-5 top-1/2 -translate-y-1/2 text-gray-400 text-lg">
                 <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </div>

        <div class="flex flex-wrap justify-center gap-2">
            <button onclick="filterCategory('all')" class="cat-btn active px-5 py-2 rounded-full font-bold text-sm transition-all shadow-md bg-indigo-600 text-white transform scale-105">
                All
            </button>
            <% ['Cook', 'Drink', 'Supplies', 'Packaging'].forEach(cat => { %>
                <button onclick="filterCategory('<%= cat %>')" class="cat-btn px-5 py-2 rounded-full font-bold text-sm transition-all shadow-sm bg-white text-gray-600 border border-gray-200 hover:bg-gray-50">
                    <%= cat %>
                </button>
            <% }) %>
        </div>
    </div>
  </div>

  <div>
    <% if (alreadySubmitted) { %>
        <div class="bg-green-50 border border-green-200 rounded-xl p-10 text-center animate-fade-up">
            <div class="w-20 h-20 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-6 text-3xl shadow-sm">
                <i class="fa-solid fa-check"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Stock Count Submitted</h3>
            <p class="text-gray-500 mb-8 text-lg">
                Record for <b><%= typeof query !== 'undefined' && query.date ? new Date(query.date).toLocaleDateString() : new Date().toLocaleDateString() %></b> 
                is complete.
            </p>
            <a href="/manager/daily-stock/history" class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-indigo-700 transition shadow-md">
                View History
            </a>
        </div>
    <% } else { %>

    <form id="dailyStockForm" onsubmit="submitDailyStock(event)">
        
        <% const categories = ['Cook', 'Drink', 'Supplies', 'Packaging']; %>
        
        <% categories.forEach(cat => { 
             const catItems = masterItems.filter(i => i.category === cat);
             if (catItems.length > 0) {
        %>
            <section class="mb-12 stock-section animate-fade-up" data-category="<%= cat %>">
                <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center gap-2 border-b border-gray-200 pb-2">
                    <% if (cat === 'Cook') { %> <i class="fa-solid fa-utensils text-orange-500"></i> <% } %>
                    <% if (cat === 'Drink') { %> <i class="fa-solid fa-glass-water text-blue-500"></i> <% } %>
                    <% if (cat === 'Supplies') { %> <i class="fa-solid fa-boxes-stacked text-purple-500"></i> <% } %>
                    <% if (cat === 'Packaging') { %> <i class="fa-solid fa-box-open text-amber-600"></i> <% } %>
                    <%= cat %>
                    <span class="text-xs font-normal text-gray-400 bg-white border border-gray-200 px-2 py-0.5 rounded-full ml-auto"><%= catItems.length %> items</span>
                </h3>
                
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                    <% catItems.forEach(item => { %>
                        <div class="bg-white rounded-2xl p-3 shadow-sm border border-gray-100 hover:shadow-md transition-all item-card group relative">
                            
                            <input type="hidden" name="items[<%= item.id %>][name]" value="<%= item.name %>">
                            <input type="hidden" name="items[<%= item.id %>][category]" value="<%= item.category %>">
                            <input type="hidden" name="items[<%= item.id %>][unit]" value="<%= item.unit %>">

                            <div class="h-28 w-full rounded-xl bg-gray-50 mb-3 overflow-hidden flex items-center justify-center relative">
                                <% if(item.image_url) { %>
                                    <img src="<%= item.image_url %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" onerror="this.src='https://via.placeholder.com/100?text=No+Img';">
                                <% } else { %>
                                    <i class="fa-solid fa-box text-2xl text-gray-300"></i>
                                <% } %>
                                <span class="absolute top-2 right-2 text-[10px] font-bold bg-white/90 px-1.5 py-0.5 rounded text-gray-500 uppercase shadow-sm">
                                    <%= item.unit || 'Unit' %>
                                </span>
                            </div>

                            <div class="text-center mb-3">
                                <h4 class="font-bold text-gray-800 text-sm leading-tight line-clamp-2 h-9 flex items-center justify-center item-name">
                                    <%= item.name %>
                                </h4>
                            </div>

                            <div class="relative">
                                <input 
                                    type="number" 
                                    name="items[<%= item.id %>][quantity]" 
                                    min="0" 
                                    step="0.01"
                                    placeholder="0" 
                                    class="w-full text-center bg-gray-50 border border-gray-200 rounded-lg py-2.5 font-bold text-indigo-600 focus:border-indigo-500 focus:bg-white focus:outline-none transition-all placeholder-gray-300"
                                >
                            </div>
                        </div>
                    <% }) %>
                </div>
            </section>
        <% } }) %>

        <div class="fixed bottom-6 right-6 z-40">
            <button type="submit" id="submitBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-4 rounded-full font-bold shadow-2xl shadow-indigo-500/30 transition-transform active:scale-95 flex items-center gap-3 text-lg border-2 border-white/20">
                <i class="fa-solid fa-save"></i> Save Count
            </button>
        </div>
    </form>
    
    <% } %>
  </div>
</div>

<script>
    function showNotification(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const toast = document.createElement('div');
        const isError = type === 'error';
        const bgClass = isError ? 'bg-red-500' : 'bg-green-500';
        const icon = isError ? '<i class="fa-solid fa-circle-exclamation"></i>' : '<i class="fa-solid fa-circle-check"></i>';
        toast.className = `${bgClass} text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 transform pointer-events-auto min-w-[300px] border-2 border-white/20`;
        toast.style.animation = 'slideIn 0.5s forwards';
        toast.innerHTML = `<div class="text-2xl">${icon}</div><div class="font-bold text-sm">${message}</div>`;
        container.appendChild(toast);
        setTimeout(() => { toast.style.animation = 'slideOut 0.5s forwards'; setTimeout(() => toast.remove(), 500); }, 3000);
    }

    // SEARCH FILTER
    function filterStockItems() {
        const term = document.getElementById('stock-search').value.toLowerCase();
        document.querySelectorAll('.item-card').forEach(card => {
            const name = card.querySelector('.item-name').innerText.toLowerCase();
            if (term.length > 0) {
                // If searching, show matching cards regardless of category tabs
                card.style.display = name.includes(term) ? '' : 'none';
                card.parentElement.parentElement.style.display = ''; // Ensure section is visible
            } else {
                card.style.display = ''; // Reset
                // Re-apply active category filter
                const activeCat = document.querySelector('.cat-btn.active').innerText.trim();
                filterCategory(activeCat);
            }
        });
    }

    // CATEGORY FILTER
    function filterCategory(catName) {
        // 1. Update Buttons
        document.querySelectorAll('.cat-btn').forEach(btn => {
            if (btn.innerText.trim() === catName) {
                btn.className = "cat-btn active px-5 py-2 rounded-full font-bold text-sm transition-all shadow-md bg-indigo-600 text-white transform scale-105";
            } else {
                btn.className = "cat-btn px-5 py-2 rounded-full font-bold text-sm transition-all shadow-sm bg-white text-gray-600 border border-gray-200 hover:bg-gray-50";
            }
        });

        // 2. Hide/Show Sections
        // Clear search input when switching tabs for clarity
        document.getElementById('stock-search').value = '';
        
        document.querySelectorAll('.stock-section').forEach(section => {
            const sectionCat = section.getAttribute('data-category');
            if (catName === 'All' || sectionCat === catName) {
                section.style.display = 'block';
                // Reset card visibility within section
                section.querySelectorAll('.item-card').forEach(c => c.style.display = '');
            } else {
                section.style.display = 'none';
            }
        });
    }

    // SUBMIT FORM
    async function submitDailyStock(e) {
        e.preventDefault();
        const btn = document.getElementById('submitBtn');
        const originalText = btn.innerHTML;
        const form = e.target;
        
        const dateVal = document.getElementById('date-input').value;
        const locationVal = document.getElementById('location-select').value;

        if(!locationVal) return showNotification("Error: No location selected.", "error");

        const data = { 
            items: [],
            date: dateVal,
            location_id: locationVal
        };

        const inputs = form.querySelectorAll('input[type="number"]');
        inputs.forEach(input => {
            if(input.value !== '' && parseFloat(input.value) >= 0) { 
                const parent = input.closest('.item-card'); 
                data.items.push({
                    name: parent.querySelector('input[name*="[name]"]').value,
                    category: parent.querySelector('input[name*="[category]"]').value,
                    unit: parent.querySelector('input[name*="[unit]"]').value,
                    quantity: input.value
                });
            }
        });

        if(data.items.length === 0) {
            return showNotification("⚠️ Please enter at least one quantity.", "error");
        }

        btn.disabled = true;
        btn.innerHTML = `<i class="fa-solid fa-spinner fa-spin"></i> Saving...`;

        try {
            const res = await fetch('/api/manager/daily-stock', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if(res.ok) {
                showNotification("Stock Count Saved Successfully!", "success");
                setTimeout(() => window.location.reload(), 1500);
            } else {
                const errData = await res.json().catch(()=>({}));
                showNotification(errData.error || "Error saving stock count", "error");
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        } catch(err) {
            console.error(err);
            showNotification("Server Connection Error", "error");
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }
</script>