<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
  
  <div class="p-6 border-b border-gray-100 flex flex-col md:flex-row justify-between md:items-center gap-4">
    <div>
        <h3 class="font-bold text-gray-800 text-lg">Daily Stock History</h3>
        <p class="text-xs text-gray-500">View past inventory logs submitted by stores</p>
    </div>
    
    <% if (user.role === 'store_manager') { %>
    <a href="/manager/daily-stock" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-bold shadow-sm transition flex items-center gap-2">
      <i class="fa-solid fa-plus"></i> Submit Today's Count
    </a>
    <% } %>
  </div>

  <div class="bg-gray-50 p-6 border-b border-gray-100">
      <form action="/manager/daily-stock/history" method="GET" class="flex flex-col md:flex-row gap-4">
          
          <div class="w-full md:w-1/3">
              <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Filter Location</label>
              
              <% if (user.role === 'store_manager') { %>
                  <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                          <i class="fa-solid fa-lock text-gray-400"></i>
                      </div>
                      <input type="text" value="My Assigned Store" disabled class="pl-10 w-full bg-gray-200 border border-gray-200 rounded-lg p-2.5 text-gray-500 font-bold cursor-not-allowed">
                  </div>
              <% } else { %>
                  <div class="relative">
                      <select name="location" onchange="this.form.submit()" class="w-full bg-white border border-gray-200 rounded-lg p-2.5 text-gray-800 font-medium focus:border-indigo-500 focus:outline-none">
                          <option value="All Locations">All Locations</option>
                          <% locations.forEach(loc => { %>
                              <option value="<%= loc.name %>" <%= filters.location === loc.name ? 'selected' : '' %>>
                                  <%= loc.name %>
                              </option>
                          <% }) %>
                      </select>
                  </div>
              <% } %>
          </div>

          <div class="w-full md:w-1/3">
               <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Filter Date</label>
               <input type="date" name="date" value="<%= filters.date %>" onchange="this.form.submit()" class="w-full bg-white border border-gray-200 rounded-lg p-2.5 text-gray-800 font-medium focus:border-indigo-500 focus:outline-none">
          </div>

          <div class="w-full md:w-auto flex items-end">
              <a href="/manager/daily-stock/history" class="px-4 py-2.5 bg-white border border-gray-200 text-gray-600 rounded-lg hover:bg-gray-100 font-bold text-sm transition">
                  Reset
              </a>
          </div>
      </form>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full text-left">
      <thead class="bg-white text-gray-400 text-xs uppercase font-bold border-b border-gray-100">
        <tr>
          <th class="p-4 pl-6">Date</th>
          <th class="p-4">Location</th>
          <th class="p-4">Submitted By</th>
          <th class="p-4 text-right pr-6">Action</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% if(logs.length > 0) { %>
           <% logs.forEach(log => { %>
              <tr class="hover:bg-gray-50 transition">
                <td class="p-4 pl-6">
                    <span class="font-bold text-gray-800">
                        <%= new Date(log.report_date).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                    </span>
                    <p class="text-xs text-gray-400">ID: #<%= log.id %></p>
                </td>
                <td class="p-4">
                    <span class="bg-indigo-50 text-indigo-700 px-2 py-1 rounded text-xs font-bold">
                        <%= log.location_name %>
                    </span>
                </td>
                <td class="p-4 text-sm text-gray-600">
                    <%= log.email %>
                </td>
                <td class="p-4 text-right pr-6">
                    <a href="/manager/daily-stock/view/<%= log.id %>" class="inline-flex items-center gap-2 bg-white border border-gray-200 text-gray-700 hover:text-indigo-600 hover:border-indigo-200 px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">
                        <i class="fa-solid fa-eye"></i> View Details
                    </a>
                </td>
              </tr>
           <% }) %>
        <% } else { %>
            <tr>
                <td colspan="4" class="p-10 text-center text-gray-400">
                    <i class="fa-regular fa-folder-open text-3xl mb-2"></i>
                    <p>No records found for this filter.</p>
                </td>
            </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>