<div class="max-w-6xl mx-auto space-y-6 my-10">
    
    <a href="/manager/daily-stock/history" class="inline-flex items-center gap-2 text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white font-bold text-sm transition">
        <i class="fa-solid fa-arrow-left"></i> Back to History
    </a>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden">
        
        <div class="p-6 border-b border-gray-100 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/50 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
                <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-1">Daily Stock Report</h1>
                <div class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400 mt-2">
                    <p class="flex items-center gap-2">
                        <i class="fa-regular fa-calendar"></i>
                        <span class="font-bold text-gray-700 dark:text-gray-200"><%= new Date(log.report_date).toLocaleDateString() %></span>
                    </p>
                    <p class="flex items-center gap-2">
                        <i class="fa-regular fa-user"></i>
                        <span class="font-bold text-gray-700 dark:text-gray-200"><%= log.email %></span>
                    </p>
                </div>
            </div>
            <div class="text-right flex flex-col items-end">
                <span class="bg-indigo-600 text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-sm flex items-center gap-2">
                    <i class="fa-solid fa-location-dot text-xs"></i>
                    <%= log.location_name %>
                </span>
                <p class="text-xs text-gray-400 mt-2">Log ID: #<%= log.id %></p>
            </div>
        </div>

        <div class="p-8 bg-gray-50/50 dark:bg-gray-900/50">
            <% 
               const categories = ['Cook', 'Drink', 'Supplies', 'Packaging'];
               let hasItems = false;
            %>

            <% categories.forEach(cat => { 
                const catItems = items.filter(i => i.category === cat);
                if (catItems.length > 0) {
                    hasItems = true;
            %>
                <div class="mb-10 last:mb-0">
                    <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                        <% if (cat === 'Cook') { %> <i class="fa-solid fa-utensils text-orange-500"></i> <% } %>
                        <% if (cat === 'Drink') { %> <i class="fa-solid fa-glass-water text-blue-500"></i> <% } %>
                        <% if (cat === 'Supplies') { %> <i class="fa-solid fa-boxes-stacked text-purple-500"></i> <% } %>
                        <% if (cat === 'Packaging') { %> <i class="fa-solid fa-box-open text-amber-600"></i> <% } %>
                        <%= cat %>
                        <span class="ml-2 text-xs font-normal bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 px-2 py-0.5 rounded-full"><%= catItems.length %></span>
                    </h3>
                    
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                        <% catItems.forEach(item => { %>
                            <div class="bg-white dark:bg-gray-800 rounded-xl p-3 shadow-sm border border-gray-100 dark:border-gray-700 flex flex-col relative group hover:shadow-md transition-all">
                                
                                <div class="h-28 w-full rounded-lg bg-gray-50 dark:bg-gray-700 mb-3 overflow-hidden flex items-center justify-center relative">
                                    <% if (item.image_url) { %>
                                        <img src="<%= item.image_url %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" onerror="this.src='https://via.placeholder.com/150?text=No+Img'">
                                    <% } else { %>
                                        <i class="fa-solid fa-box text-3xl text-gray-300 dark:text-gray-600"></i>
                                    <% } %>
                                    
                                    <div class="absolute top-2 right-2">
                                        <span class="text-[10px] font-bold bg-white/90 dark:bg-black/80 text-gray-600 dark:text-gray-300 px-1.5 py-0.5 rounded shadow-sm uppercase">
                                            <%= item.unit %>
                                        </span>
                                    </div>
                                </div>

                                <h4 class="font-bold text-gray-800 dark:text-white text-sm leading-tight mb-2 line-clamp-2 min-h-[2.5em]">
                                    <%= item.item_name %>
                                </h4>

                                <div class="mt-auto pt-2 border-t border-gray-50 dark:border-gray-700 flex justify-between items-center">
                                    <span class="text-xs text-gray-400 font-medium uppercase">Counted</span>
                                    <span class="text-lg font-bold text-indigo-600 dark:text-indigo-400">
                                        <%= item.quantity %>
                                    </span>
                                </div>

                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } }) %>

            <% if (!hasItems) { %>
                <div class="text-center py-16 text-gray-400">
                    <i class="fa-regular fa-clipboard text-4xl mb-3 opacity-50"></i>
                    <p>No items were recorded in this log.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>