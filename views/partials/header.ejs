  tailwind.config = {
    darkMode: 'class', // 1. Enable Class-based Dark Mode
    theme: {
      extend: {
        colors: {
          orange: { 500: "#FF5A00", 600: "#E04F00" },
          black: { 900: "#111111" },
          // Add dark specific grays if needed, or use default slate/gray
        },
        fontFamily: {
          sans: ["Inter", "sans-serif"],
        },
      },
    },
  };
</script>

<script>
  if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark');
  } else {
    document.documentElement.classList.remove('dark');
  }
</script>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet"/>

<style>
  body { font-family: "Inter", sans-serif; }
  .hide-section { display: none; }
  .active-tab { color: #ff5a00; border-bottom: 2px solid #ff5a00; }
  .inactive-tab { color: #6b7280; border-bottom: 2px solid transparent; }
</style>
</head>
