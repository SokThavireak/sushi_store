<div id="toast-container" class="fixed top-24 right-4 z-[9999] flex flex-col gap-3 pointer-events-none"></div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 mt-24 lg:mt-32">
    <% if (typeof user !== 'undefined' && (user.role === 'manager' || user.role === 'admin' || user.role === 'store_manager' || user.role === 'cashier')) { %>
    <div class="bg-orange-600 text-white p-4 lg:p-6 rounded-xl mb-6 flex justify-between items-center shadow-lg">
        <h1 class="text-xl lg:text-2xl font-bold flex items-center gap-2">
            <i class="fa-solid fa-clipboard-list"></i> STAFF POS
        </h1>
        <div class="text-orange-100 text-xs lg:text-sm font-semibold">
            <%= typeof user !== 'undefined' ? 'Operator: ' + user.email.split('@')[0] : '' %>
        </div>
    </div>
    <% } %>

    <div class="mb-6 lg:mb-10 flex flex-col items-center">
        <div class="relative w-full max-w-4xl group mb-6">
            <input 
                type="text" 
                id="staff-search" 
                onkeyup="filterStaffMenu()" 
                placeholder="Search Item Code or Name..." 
                class="w-full pl-12 pr-4 py-3 lg:pl-14 lg:pr-8 lg:py-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 shadow-sm text-base lg:text-lg text-gray-700 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all" 
            />
            <div class="absolute left-4 lg:left-6 top-1/2 -translate-y-1/2 text-gray-400 text-lg lg:text-xl">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </div>

        <div class="flex flex-wrap justify-center gap-2" id="category-filters">
            <button onclick="filterCategory('all')" 
                class="filter-btn active px-5 py-2 rounded-full font-bold text-sm transition-all shadow-sm bg-indigo-600 text-white hover:shadow-md">
                All
            </button>
            <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                <% categories.forEach((category) => { %>
                    <button onclick="filterCategory('<%= category.name %>')" 
                        class="filter-btn px-5 py-2 rounded-full font-bold text-sm transition-all shadow-sm bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                        <%= category.name %>
                    </button>
                <% }) %>
            <% } %>
        </div>
    </div>

    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
        <% categories.forEach((category) => { %>
            <% let categoryProducts = category.name === 'Most Sales' ? products.filter(p => p.is_best_seller) : products.filter(p => p.category === category.name); %>
            <% if (categoryProducts.length > 0) { %>
                <section class="mb-8 lg:mb-12 category-section" data-category="<%= category.name %>">
                    <h2 class="text-lg lg:text-xl font-bold text-gray-800 dark:text-white mb-4 lg:mb-6 border-b border-gray-200 dark:border-gray-700 pb-2 flex items-center gap-2">
                        <span class="w-2 h-6 bg-orange-500 rounded-full inline-block"></span>
                        <%= category.name %>
                    </h2>
                    
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3 lg:gap-4">
                        <% categoryProducts.forEach(product => { %>
                            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-all overflow-hidden product-card group flex flex-row sm:flex-col h-24 sm:h-auto">
                                
                                <div class="w-24 sm:w-full h-full sm:h-36 relative flex-shrink-0">
                                    <img src="<%= product.image_url || 'https://via.placeholder.com/150' %>" class="w-full h-full object-cover" loading="lazy" />
                                    <button onclick="addToCart(<%= product.id %>)" class="hidden sm:flex absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 items-center justify-center text-white transition-all cursor-pointer">
                                        <i class="fa-solid fa-plus text-3xl"></i>
                                    </button>
                                </div>
                                
                                <div class="p-3 flex-1 flex flex-col justify-between sm:block">
                                    <div>
                                        <h3 class="font-bold text-gray-800 dark:text-gray-100 text-sm sm:text-base leading-tight mb-1 product-name line-clamp-2">
                                            <%= product.name %>
                                        </h3>
                                        <span class="text-indigo-600 dark:text-indigo-400 font-bold text-sm sm:text-base">
                                            <%= product.price %> $
                                        </span>
                                    </div>

                                    <div class="flex justify-end sm:justify-between items-center sm:mt-2">
                                        <button onclick="addToCart(<%= product.id %>)" class="hidden sm:block text-xs bg-indigo-50 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 px-3 py-1 rounded hover:bg-indigo-100 dark:hover:bg-indigo-900/50 font-bold transition-colors">
                                            Add
                                        </button>
                                        <button onclick="addToCart(<%= product.id %>)" class="sm:hidden w-8 h-8 bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 rounded-full flex items-center justify-center active:bg-orange-500 active:text-white transition-colors">
                                            <i class="fa-solid fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </section>
            <% } %>
        <% }) %>
    <% } %>
</div>

<script>
    function filterStaffMenu() {
        const searchInput = document.getElementById('staff-search').value.toLowerCase();
        document.querySelectorAll('.product-card').forEach(card => {
            const name = card.querySelector('.product-name').innerText.toLowerCase();
            if(searchInput.length > 0) {
                 card.style.display = name.includes(searchInput) ? 'flex' : 'none';
            } else {
                card.style.display = 'flex';
            }
        });
        if(searchInput.length === 0) {
            const activeBtn = document.querySelector('.filter-btn.active');
            if(activeBtn) filterCategory(activeBtn.innerText.trim());
        }
    }

    function showNotification(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const toast = document.createElement('div');
        const isError = type === 'error';
        const bgClass = isError ? 'bg-red-500' : 'bg-green-500';
        const icon = isError ? '<i class="fa-solid fa-circle-exclamation"></i>' : '<i class="fa-solid fa-circle-check"></i>';
        toast.className = `${bgClass} text-white px-4 py-3 rounded-lg shadow-lg flex items-center gap-3 transform transition-all duration-300 translate-x-full opacity-0 pointer-events-auto min-w-[250px]`;
        toast.innerHTML = `<div class="text-xl">${icon}</div><div class="font-bold text-sm">${message}</div>`;
        container.appendChild(toast);
        requestAnimationFrame(() => toast.classList.remove('translate-x-full', 'opacity-0'));
        setTimeout(() => {
            toast.classList.add('translate-x-full', 'opacity-0');
            setTimeout(() => toast.remove(), 300);
        }, 1500);
    }

    async function addToCart(productId) {
        try {
            const res = await fetch('/api/cart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId })
            });
            const data = await res.json();
            if(res.ok) {
                showNotification(`Added Item #${productId}`, 'success');
            } else {
                showNotification(data.error, 'error');
            }
        } catch(err) {
            console.error(err);
            showNotification('Connection Error', 'error');
        }
    }

    function filterCategory(categoryName) {
        document.querySelectorAll('.filter-btn').forEach(btn => {
            const btnText = btn.innerText.trim();
            if (btnText === categoryName || (categoryName === 'all' && btnText === 'All')) {
                btn.className = "filter-btn active px-5 py-2 rounded-full font-bold text-sm transition-all shadow-md bg-indigo-600 text-white transform scale-105";
            } else {
                btn.className = "filter-btn px-5 py-2 rounded-full font-bold text-sm transition-all shadow-sm bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700";
            }
        });
        document.querySelectorAll('.category-section').forEach(section => {
            if (categoryName === 'all' || section.dataset.category === categoryName) {
                section.style.display = 'block';
                section.classList.add('animate-fade-up'); 
            } else {
                section.style.display = 'none';
            }
        });
    }
</script>