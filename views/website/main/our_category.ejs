<% 
// DATA CONFIGURATION
// UPDATED: Names now match your PostgreSQL Database exactly (Singular vs Plural)
const myCategories = [
    { name: 'Roll', icon: '<i class="fa-solid fa-scroll"></i>', desc: 'Fresh Atlantic salmon, tuna, and yellowtail rolls prepared daily.', img: 'https://images.unsplash.com/photo-1579584425555-c3ce17fd4351?q=80&w=600&auto=format&fit=crop' },
    { name: 'Set', icon: '<i class="fa-solid fa-bento-box"></i>', desc: 'Curated combinations perfect for lunch boxes or sharing.', img: 'https://images.unsplash.com/photo-1611143669185-af224c5e3252?q=80&w=600&auto=format&fit=crop' },
    { name: 'Hot Roll', icon: '<i class="fa-solid fa-fire"></i>', desc: 'Baked to perfection with spicy mayo and eel sauce.', img: 'https://images.unsplash.com/photo-1633478062482-790e3b5dd810?q=80&w=600&auto=format&fit=crop' },
    { name: 'Maki', icon: '<i class="fa-solid fa-circle-dot"></i>', desc: 'Classic hosomaki rolls wrapped in crisp nori.', img: 'https://images.unsplash.com/photo-1553621042-f6e147245754?q=80&w=600&auto=format&fit=crop' },
    { name: 'Ramen', icon: '<i class="fa-solid fa-bowl-food"></i>', desc: 'Rich, creamy tonkotsu broth with handmade noodles.', img: 'https://images.unsplash.com/photo-1569718212165-3a8278d5f624?q=80&w=600&auto=format&fit=crop' },
    { name: 'Poke', icon: '<i class="fa-solid fa-fish"></i>', desc: 'Healthy Hawaiian-style bowls with marinated fish.', img: 'https://images.unsplash.com/photo-1546069901-ba9599a7e63c?q=80&w=600&auto=format&fit=crop' }
];
%>

<section id="our-menu" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="mb-10 text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 scroll-hidden">
            Our Categories
        </h2>
        <p class="text-gray-500 mt-2 scroll-hidden" style="transition-delay: 0.1s">
            Explore our wide variety of Japanese delicacies
        </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <% myCategories.forEach(function(cat, index) { 
          // 1. Generate ID exactly like menu.ejs does (lowercase, replace space with dash)
          // Example: "Hot Roll" -> "hot-roll"
          const menuId = cat.name.trim().toLowerCase().replace(/\s+/g, '-');
      %>
          <a href="/menu#<%= menuId %>" 
             class="group relative h-80 rounded-[2rem] overflow-hidden bg-gray-800 no-underline shadow-lg hover:shadow-2xl transition-all duration-300 scroll-hidden" 
             style="transition-delay: <%= (index + 1) * 0.1 %>s">
            
            <div class="absolute inset-0 w-full h-full">
                <img src="<%= cat.img %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" alt="<%= cat.name %>">
                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent opacity-90 group-hover:opacity-80 transition-opacity duration-300"></div>
            </div>

            <div class="relative h-full p-6 flex flex-col items-center justify-center text-center z-10">
     
              <div class="mb-4 transform transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-2">
                <span class="text-6xl drop-shadow-md text-white"><%- cat.icon %></span>
              </div>
              
              <h3 class="font-bold text-white text-3xl mb-2 drop-shadow-md group-hover:-translate-y-2 transition-transform duration-300"><%= cat.name %></h3>
             
              <div class="max-h-0 opacity-0 group-hover:max-h-40 group-hover:opacity-100 transition-all duration-500 ease-in-out overflow-hidden w-full px-4">
                <p class="text-gray-200 text-sm mb-4 leading-relaxed"><%= cat.desc %></p>
                <span class="inline-block px-6 py-2 bg-orange-500 text-white text-xs font-bold uppercase tracking-wider rounded-full shadow-md hover:bg-orange-600 transition-colors">
                    View Items
                </span>
              </div>
            </div>
          </a>
      <% }); %>

    </div>
  </div>
</section>