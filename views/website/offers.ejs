<script>
    // 1. Observer
    document.addEventListener("DOMContentLoaded", function() {
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-up');
                    entry.target.classList.remove('scroll-hidden');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        document.querySelectorAll('.scroll-hidden').forEach((el) => observer.observe(el));
    });

    // 2. NEW NOTIFICATION SYSTEM
    function showNotification(message, type = 'success') {
        const container = document.getElementById('toast-container');
        const toast = document.createElement('div');
        const isError = type === 'error';
        const bgClass = isError ? 'bg-red-500' : 'bg-green-500';
        const icon = isError ? '<i class="fa-solid fa-circle-exclamation"></i>' : '<i class="fa-solid fa-check"></i>'; // Simplified icon

        toast.className = `${bgClass} text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 transform transition-all duration-300 translate-x-full opacity-0 pointer-events-auto min-w-[300px] border-2 border-white/20`;
        toast.innerHTML = `<div class="text-2xl">${icon}</div><div class="font-bold">${message}</div>`;

        container.appendChild(toast);
        requestAnimationFrame(() => toast.classList.remove('translate-x-full', 'opacity-0'));
        setTimeout(() => {
            toast.classList.add('translate-x-full', 'opacity-0');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // 3. Updated Functions
    function copyCode(code) {
        navigator.clipboard.writeText(code);
        showNotification(`Code ${code} Copied!`, 'success');
    }

    async function addToCart(productId) {
        try {
            const response = await fetch('/api/cart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId: productId })
            });
            const data = await response.json();
            if (response.ok) {
                showNotification('Added to Cart! üõí', 'success');
            } else {
                showNotification('Error adding to cart', 'error');
            }
        } catch (error) {
            console.error('Error:', error);
            showNotification('Connection Error', 'error');
        }
    }
</script>