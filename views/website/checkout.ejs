<div class="max-w-4xl mx-auto px-6 mt-36 mb-20">
    <h1 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Checkout (Pick-up)</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2 space-y-8">
            <form action="/api/orders" method="POST" id="checkout-form" onsubmit="disableButton()">
                
                <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 mb-6">
                    <h2 class="text-xl font-bold mb-4 flex items-center gap-2 text-gray-900 dark:text-white">
                        <i class="fa-solid fa-store text-orange-500"></i> Select Store
                    </h2>
                    
                    <div class="space-y-3">
                        <% if (locations.length > 0) { %>
                            <% locations.forEach(loc => { %>
                            <label class="flex items-center p-4 border rounded-xl cursor-pointer hover:bg-orange-50 dark:hover:bg-gray-700 transition border-gray-200 dark:border-gray-600 has-[:checked]:border-orange-500 has-[:checked]:bg-orange-50 dark:has-[:checked]:bg-gray-700">
                                <input type="radio" name="pickup_location" value="<%= loc.name %>" required class="w-5 h-5 text-orange-500 focus:ring-orange-500">
                                <div class="ml-4">
                                    <span class="block font-bold text-gray-900 dark:text-white"><%= loc.name %></span>
                                    <span class="block text-sm text-gray-500 dark:text-gray-400"><%= loc.address %></span>
                                </div>
                            </label>
                            <% }) %>
                        <% } else { %>
                            <p class="text-red-500">No stores available. Please contact admin.</p>
                        <% } %>
                    </div>
                </div>

                <button type="submit" id="confirm-btn" class="w-full mt-8 bg-orange-500 text-white py-4 rounded-full font-bold text-lg hover:bg-orange-600 shadow-lg transition transform hover:-translate-y-1">
                    Confirm Order
                </button>
            </form>
        </div>

        <div class="md:col-span-1">
            <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-2xl sticky top-24 border border-gray-100 dark:border-gray-700">
                <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Order Summary</h3>
                <div class="space-y-3 mb-4 max-h-60 overflow-y-auto">
                    <% let total = 0; %>
                    <% cart.forEach(item => { total += (item.price * item.quantity); %>
                        <div class="flex justify-between text-sm text-gray-700 dark:text-gray-300">
                            <span><%= item.quantity %>x <%= item.name %></span>
                            <span class="font-medium"><%= item.price * item.quantity %> $</span>
                        </div>
                    <% }) %>
                </div>
                <div class="border-t border-gray-200 dark:border-gray-600 pt-4 flex justify-between font-bold text-xl text-gray-900 dark:text-white">
                    <span>Total</span>
                    <span class="text-orange-600 dark:text-orange-400"><%= total %> $</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function disableButton() {
        const btn = document.getElementById('confirm-btn');
        btn.innerText = "Processing...";
        btn.disabled = true;
        btn.classList.add('opacity-50', 'cursor-not-allowed');
    }
</script>